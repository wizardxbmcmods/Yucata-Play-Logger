{
  "name": "Yucata Play Logger",
  "description": "Log Yucata.de plays on BGG",
  "version": "1.0",
  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ],
  "background": {
    "scripts": ["background.js"],
	"persistent": true
  },
  "browser_action": {
    "default_title": "Yucata Play Logger",
	"default_icon": "icon16.png"
  },
  "icons": { 
	"16": "icon16.png",
	"48": "icon48.png",
	"128": "icon128.png" 
	},
  "manifest_version": 2
}
